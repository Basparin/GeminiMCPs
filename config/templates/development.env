# CodeSage MCP Server - Development Environment Configuration
# =================================================================
# This configuration is optimized for development environments with
# debugging features enabled and reduced resource usage for testing.

# =================================================================
# LLM API CONFIGURATION
# =================================================================

# Primary LLM Provider (choose one)
GROQ_API_KEY="your-groq-api-key-here"
# OPENROUTER_API_KEY="your-openrouter-api-key-here"
# GOOGLE_API_KEY="your-google-api-key-here"

# =================================================================
# PERFORMANCE & MEMORY CONFIGURATION
# =================================================================

# Memory Management
CODESAGE_MEMORY_LIMIT=256MB
CODESAGE_MAX_MEMORY_MB=512
CODESAGE_ENABLE_MEMORY_MONITORING=true
CODESAGE_MEMORY_CHECK_INTERVAL=30

# Model Optimization
CODESAGE_ENABLE_MODEL_QUANTIZATION=false
CODESAGE_MODEL_CACHE_TTL_MINUTES=30
CODESAGE_ENABLE_MEMORY_MAPPED_INDEXES=false

# =================================================================
# CACHING CONFIGURATION
# =================================================================

# Cache Sizes (reduced for development)
CODESAGE_EMBEDDING_CACHE_SIZE=2000
CODESAGE_SEARCH_CACHE_SIZE=500
CODESAGE_FILE_CACHE_SIZE=50

# Cache Behavior
CODESAGE_SIMILARITY_THRESHOLD=0.8
CODESAGE_MAX_FILE_SIZE_MB=0.5
CODESAGE_CACHE_PERSISTENCE_ENABLED=false
CODESAGE_CACHE_WARMING_ENABLED=false

# Adaptive Features
CODESAGE_ADAPTIVE_CACHE_ENABLED=false
CODESAGE_MEMORY_THRESHOLD_HIGH=0.8
CODESAGE_MEMORY_THRESHOLD_LOW=0.3

# =================================================================
# PROCESSING CONFIGURATION
# =================================================================

# Parallel Processing
CODESAGE_PARALLEL_WORKERS=2
CODESAGE_BATCH_SIZE=25
CODESAGE_MAX_FILE_SIZE_MB=0.5

# Index Optimization
CODESAGE_INDEX_COMPRESSION=false
CODESAGE_INDEX_TYPE=flat
CODESAGE_FAISS_NLIST_AUTO=false

# =================================================================
# SEARCH CONFIGURATION
# =================================================================

# Search Parameters
CODESAGE_DEFAULT_TOP_K=5
CODESAGE_MAX_TOP_K=10
CODESAGE_SEMANTIC_SEARCH_ENABLED=true
CODESAGE_TEXT_SEARCH_ENABLED=true

# Search Optimization
CODESAGE_SEARCH_CACHE_ENABLED=true
CODESAGE_SEARCH_CACHE_SIZE=500
CODESAGE_SEARCH_CACHE_SIMILARITY_THRESHOLD=0.8

# =================================================================
# LOGGING & MONITORING
# =================================================================

# Logging
CODESAGE_LOG_LEVEL=DEBUG
CODESAGE_LOG_FORMAT=text
CODESAGE_LOG_FILE=logs/codesage_dev.log
CODESAGE_LOG_MAX_SIZE=100MB
CODESAGE_LOG_BACKUP_COUNT=3

# Performance Logging
CODESAGE_PERFORMANCE_LOGGING_ENABLED=true
CODESAGE_SLOW_QUERY_THRESHOLD=0.5

# Monitoring
CODESAGE_HEALTH_CHECK_ENABLED=true
CODESAGE_METRICS_PORT=9091
CODESAGE_PERFORMANCE_MONITORING_ENABLED=true
CODESAGE_METRICS_COLLECTION_INTERVAL=30

# =================================================================
# DEVELOPMENT FEATURES
# =================================================================

# Debug Settings
CODESAGE_DEBUG_MODE=true
CODESAGE_VERBOSE_LOGGING=true
CODESAGE_DEVELOPMENT_MODE=true

# Testing Features
CODESAGE_ENABLE_TESTING_TOOLS=true
CODESAGE_MOCK_EXTERNAL_APIS=false
CODESAGE_SKIP_AUTHENTICATION=false

# =================================================================
# INTEGRATION SETTINGS
# =================================================================

# Gemini CLI Integration
CODESAGE_MCP_SERVER_NAME=codesage-dev
CODESAGE_MCP_SERVER_URL=http://localhost:8000

# =================================================================
# DEVELOPMENT NOTES
# =================================================================
# - Use this configuration for local development and testing
# - Reduced resource limits to prevent system impact
# - Debug logging enabled for troubleshooting
# - Cache persistence disabled for clean restarts
# - Performance monitoring enabled for optimization
#
# For production use, see config/templates/production.env