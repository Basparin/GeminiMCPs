# CodeSage MCP Server and CES Environment Variables
# Copy this file to .env and fill in your actual API keys

# AI Assistant API Keys
# Groq API Key - Get from https://console.groq.com/keys
GROQ_API_KEY="gsk_..."

# OpenRouter API Key - Get from https://openrouter.ai/keys
OPENROUTER_API_KEY="sk-or-..."

# Google AI API Key - Get from https://makersuite.google.com/app/apikey
GOOGLE_API_KEY="AIza..."

# CES Configuration
# CES Debug Mode
CES_DEBUG=false

# CES Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
CES_LOG_LEVEL=INFO

# CES Memory Settings
CES_MAX_MEMORY_MB=256
CES_MEMORY_DB_PATH=ces_memory.db
CES_MAX_CONTEXT_AGE_DAYS=90
CES_SEMANTIC_MEMORY_SIZE_MB=500

# CES Ethical Settings
CES_ETHICAL_CHECKS_ENABLED=true
CES_BIAS_DETECTION_ENABLED=true

# CES Performance Settings
CES_MAX_CONCURRENT_TASKS=5
CES_TASK_TIMEOUT_SECONDS=300
CES_CACHE_ENABLED=true

# CES Development Settings
CES_DEVELOPMENT_MODE=true
CES_ENABLE_METRICS=true
CES_METRICS_PORT=9090